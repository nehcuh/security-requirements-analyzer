{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Chrome with Remote Debugging",
      "type": "shell",
      "command": "chrome",
      "args": [
        "--remote-debugging-port=9222",
        "--user-data-dir=${workspaceFolder}/.chrome-profile",
        "--load-extension=${workspaceFolder}",
        "chrome://extensions/"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Reload Extension",
      "type": "shell",
      "command": "echo",
      "args": ["Extension reloaded - refresh chrome://extensions/ manually"],
      "group": "build"
    },
    {
      "label": "Build and Test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Reload Extension"
      ]
    }
  ]
}