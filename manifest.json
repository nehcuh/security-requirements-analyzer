{
  "manifest_version": 3,
  "name": "安全需求分析助手",
  "version": "1.0.0",
  "description": "自动解析产品需求文档并生成安全测试用例",
  "permissions": ["activeTab", "storage", "scripting", "downloads"],
  "host_permissions": ["https://*/*", "http://127.0.0.1/*"],
  "background": {
    "service_worker": "src/background/background-simple.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/attachment-sorter.js", "src/content/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "安全需求分析"
  },
  "options_page": "src/config/config.html",
  "web_accessible_resources": [
    {
      "resources": ["libs/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
